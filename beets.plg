<FILE Run="/bin/bash" Method="install">
<INLINE>
if [ -d /usr/local/emhttp/plugins/&name; ]; then
  rm -r /usr/local/emhttp/plugins/&name;
fi;
if [ -f /etc/rc.d/rc.&name; ]; then
  rm -f /etc/rc.d/rc.&name;
fi;

# install python supporting files, beets and beets plugins

# update python pip installer
pip install --upgrade --force-reinstall pip 2>/dev/null

# update python setuptools
pip install --upgrade --force-reinstall setuptools

# install python package: pylast (needed for beets lastgenre plugin)
pip install --upgrade --force-reinstall pylast

# install discogs client libs (needed for beets discogs plugin)
pip install --upgrade --force-reinstall discogs-client==1.1.1

# install pyacoustid (needed for chromaprint)
pip install --upgrade --force-reinstall pyacoustid

# install beets
pip install --upgrade beets

# setup global environment variable, needed so beets knows where to find its config file. creates if missing, updates if present. 
! grep -q BEETSDIR /etc/profile &amp;&amp; sed -i '$a\export BEETSDIR=/\boot/config/\plugins/\beets' /etc/profile || sed -i 's#.*BEETSDIR.*#BEETSDIR=/\boot/config/\plugins/\beets#' /etc/profile

</INLINE>
</FILE>

