    exec("sed -i \"s#.*timid:.*#    timid: $IMPORT_TIMID#\" /boot/config/plugins/beets/config.yaml");
    exec("sed -i \"s#.*log:.*#    log: $IMPORT_LOG#\" /boot/config/plugins/beets/config.yaml");

